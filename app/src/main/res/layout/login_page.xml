<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222"
    android:padding="10dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="0dp"
        android:src="@mipmap/front1" />

    <ImageView
        android:id="@+id/textView"
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:layout_below="@+id/imageView"
        android:layout_centerInParent="true"
        android:src="@mipmap/front2"/>

    <EditText
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView"
        android:textColor="#cfcaca"
        android:hint="user name"
        android:padding="15dp"
        android:textColorHint="#cfcaca" />

    <EditText
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/userName"
        android:textColor="#cfcaca"
        android:hint="password"
        android:padding="15dp"
        android:textColorHint="#cfcaca" />

    <Button
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/password"
        android:layout_margin="20dp"
        android:background="#2f90e4"
        android:text="@string/login"
        android:textAllCaps="true" />

    <Button
        android:id="@+id/signUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password"
        android:layout_margin="20dp"
        android:layout_toRightOf="@+id/login"
        android:backgroundTint="#3ee441"
        android:background="#029aff"
        android:text="@string/sign_up"
        android:textAllCaps="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:autoLink="all"
        android:text="www.onepiece.com"
        android:textColor="#e9e3e3"
        />


</RelativeLayout>